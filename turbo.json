{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "$NODE_ENV"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {
      "outputs": [],
      "inputs": [
        "../../configs/prettier/*",
        "../../configs/eslint/*",
        "../../.eslintrc.js",
        ".eslintrc.js",
        "src/**/*.{js,jsx,ts,tsx}"
      ]
    },
    "tscheck": {
      "outputs": [],
      "inputs": ["../../configs/ts/*.json", "tsconfig.json", "src/**/*.{js,jsx,ts,tsx,json}"]
    },
    "dev": {
      "cache": false
    }
  }
}
